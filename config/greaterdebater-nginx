	location /robots.txt {
		root /usr/local/src/tcd/index/;
		expires max;
	}

	location /favicon.ico {
		root /usr/local/src/tcd/index/;
		expires max;
	}

	location /static {
		 root /usr/local/src/tcd/index;
		 if (-e $request_filename) {
		 expires 24h;
		 break;}
	}

	location /media {
		root /usr/local/src/tcd/index/static/;
		expires max;
	}

	location / {
 		 rewrite (.*) http://greaterdebater.com$1 permanent;
	}				 
